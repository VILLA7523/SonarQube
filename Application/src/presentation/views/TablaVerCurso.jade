doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title CURSO
    // ICONOS
    link(href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet')
    // ESTILOS
    link(rel='stylesheet' href='/stylesheets/style-side-bar.css')
    link(rel='stylesheet' href='/stylesheets/style-table.css')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  body
    nav
      h2
        | SCOOBY 
        br
        |  ATTENDANCE
      img(src='/images/logodog.png')
      #options
        ul
          li
            a(href='/panel')
              i.fa.fa-pencil-square-o(aria-hidden='true')
              p Inicio
          li
            a(href='/crearcurso')
              i.fa.fa-plus-circle(aria-hidden='true')
              p Crear Cursos
          li
            a(href='/vercursos')
              i.fa.fa-list-alt(aria-hidden='true')
              p Cursos
          li
            a(href='/login')
              i.fa.fa-sign-out(aria-hidden='true')
              p Salir
    main
      table.table.table-hover.mt-5
        thead
          tr
            th(scope='col') Nombre del Curso
            th(scope='col') Semestre
            th(scope='col') Secci√≥n
            th(scope='col') Tipo
            th(scope='col') Alumnos
            th(scope='col') Opciones
        tbody
          each nameCourse in Courses
            tr
              td.text-center.align-middle
                | #{nameCourse.Course_Name} 
                br
                a.btn.btn-primary.btn-sm.mt-1.active(href='/vercalendario/#{nameCourse.CourseID}' role='button') Ver Asistencias
                a.btn.btn-secondary.btn-sm.mt-1.active.ml-2(href='/verhorario/#{nameCourse.CourseID}/#{nameCourse.Course_Name}' role='button') Ver horario
              td.text-center.align-middle  #{nameCourse.Semestre} 
              td.text-center.align-middle  #{nameCourse.Section_Name}
              td.text-center.align-middle  #{nameCourse.Type_Name} 
              td.text-center.align-middle  #{nameCourse.NumEst} 
              td.text-center.align-middle
                a.btn.btn-primary.btn-sm.mb-1.active(href='/tabla/#{nameCourse.CourseID}' role='button') Estudiantes
                br
                a.btn.btn-danger.btn-sm.mb-1.active(href='/deletecourse/#{nameCourse.CourseID}' role='button') Eliminar
                br
                a.btn.btn-dark.btn-sm.mb-1.active(href='modify/#{nameCourse.CourseID}' role='button') Editar
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')











